<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_map">
    <fragment
        android:id="@+id/fragment_map"
        android:name="com.example.carypark.fragements.Map"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" >
        <argument android:name="long" />
        <argument android:name="lat" />
        <argument
            android:name="name"
            app:argType="string" />
        <action
            android:id="@+id/action_fragment_map_to_incommingsrides"
            app:destination="@+id/incommingsrides"/>
        <action
            android:id="@+id/action_fragment_map_to_history"
            app:destination="@+id/history"/>
    </fragment>
    <fragment
        android:id="@+id/history"
        android:name="com.example.carypark.fragements.History"
        tools:layout="@layout/fragment_history">
        <action
            android:id="@+id/action_history_to_settings"
            app:destination="@+id/settings"/>
    </fragment>

    <fragment
        android:id="@+id/incommingsrides"
        android:name="com.example.carypark.fragements.IncommingRides"
        tools:layout="@layout/fragment_incomming_rides">
        <action
            android:id="@+id/action_incommingsrides_to_parkings"
            app:destination="@+id/parkings"/>
    </fragment>
    <fragment
        android:id="@+id/parkings"
        android:name="com.example.carypark.fragements.listParkings"
        tools:layout="@layout/fragment_list_parkings">
        <action
            android:id="@+id/action_parkings_to_settings"
            app:destination="@+id/settings"/>
    </fragment>
    <fragment
        android:id="@+id/settings"
        android:name="com.example.carypark.fragements.Settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settings_to_profile"
            app:destination="@+id/profile"/>
    </fragment>
    <fragment
        android:id="@+id/profile"
        android:name="com.example.carypark.fragements.Profile"
        tools:layout="@layout/fragment_profile">

    </fragment>



</navigation>